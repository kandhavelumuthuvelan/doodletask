<h3>{{viewTitle}}</h3>
<form action="/memo" method="POST">
<input type="hidden" name="_id" value="{{course._id}}">



<div class = "form-group">
<label>Task name</label>
<input type="text" maxlength="100" class="form-control" name="taskName" placeholder="Task name" value="{{memo.taskName}}">
 
<div class = "form-group">
<label>Memo ID</label>
<input type="text"  class="form-control" name="memoId" placeholder="memoId" value="{{memo.memoId}} " required>
</div>

<div class="text-danger">
{{memo.taskNameError}}</div>
</div>
<div class = "form-group">
<label>Expiry</label>
<input type="date"  class="form-control" name="expiry" value="{{memo.expiry }} " required>
</div>
<div class = "form-group">
<label>Status</label>
<input type="text" min='10' max='99' class="form-control" name="status" placeholder="status" "{{memo.status}} " required>
</div>
<div class="form-group">
<button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
<!--<a class="btn btn-secondary" href="/course/list"><i class="fa fa-list-alt"></i> View All Courses</a>-->
</div>
</form>